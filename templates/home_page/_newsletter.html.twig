<section class="py-5 bg-light">
    <div class="container">
        <div class="card shadow">
            <div class="row g-0">
                <!-- Lewa strona -->
                <div class="col-md-6 d-flex align-items-center p-4">
                    <h4 class="fs-4">
                        ZAMÓW DARMOWY NEWSLETTER, A JAKO PIERWSZY DOWIESZ SIĘ O NASZYCH WYDARZENIACH SPORTOWYCH, FESTIWALACH I INNYCH PROJEKTACH TANECZNYCH!
                    </h4>
                </div>
                <!-- Prawa strona (formularz) -->
                <div class="col-md-6 bg-dark text-white p-4">
                    <form action="{{ path('app_home_page') }}" method="POST">
                        <div class="mb-3">
                            <label for="firstName" class="form-label">Imię</label>
                            <input type="text" class="form-control" id="firstName" name="firstName" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Adres Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="terms" name="terms" required>
                            <label class="form-check-label" for="terms">
                                Zapisując się wyrażam zgodę na otrzymanie informacji o produktach, usługach i promocjach od FEELTHEHOLIDAY sp. z o.o. oraz akceptuję politykę prywatności.
                            </label>
                        </div>
                        <button type="submit" class="btn btn-light w-100">Zapisuję się!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>