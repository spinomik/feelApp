{% trans_default_domain 'partials' %}
<footer class="bg-dark text-light py-3">
	<div class="container">
		<div
			class="row">

			<!-- Linki prawne i społecznościowe -->
			<div class="col-md-4 mb-2">
				<ul class="list-unstyled">
					<li>
						<a class="text-light text-decoration-none" href="{{ path('app_policies_terms_of_service') }}">
							<i class="bi bi-link"></i>
							{{ 'footer.terms_of_service'|trans }}</a>
					</li>
					<li>
						<a class="text-light text-decoration-none" href="{{ path('app_policies_event_terms') }}">
							<i class="bi bi-link"></i>
							{{ 'footer.event_terms'|trans }}</a>
					</li>
					<li>
						<a class="text-light text-decoration-none" href="{{ path('app_policies_privacy_policy') }}">
							<i class="bi bi-link"></i>
							{{ 'footer.privacy_policy'|trans }}</a>
					</li>
					<li>
						<a class="text-light text-decoration-none" href="{{ path('app_policies_safety_procedure') }}">
							<i class="bi bi-link"></i>
							{{ 'footer.safety_procedure'|trans }}</a>
					</li>
					<li>
						<a class="text-light text-decoration-none" href="{{ path('app_policies_cookies') }}">
							<i class="bi bi-link"></i>
							{{ 'footer.cookies'|trans }}</a>
					</li>
					<li>
						<a class="text-light text-decoration-none" href="{{ links.facebook_friends }}" target="_blank">
							<i class="bi bi-link"></i>
							{{ 'footer.fb_friends'|trans }}</a>
					</li>
					<li>
						<a class="text-light text-decoration-none" href="{{ links.facebook }}" target="_blank">
							<i class="bi bi-link"></i>
							{{ 'footer.fanpage'|trans }}</a>
					</li>
					<li>
						<a class="text-light text-decoration-none" href="{{ links.instagram }}" target="_blank">
							<i class="bi bi-link"></i>
							{{ 'footer.instagram'|trans }}</a>
					</li>
				</ul>
			</div>

			<!-- Dane firmy i newsletter -->
			<div class="col-md-4 mb-2">
				<p class="mb-3">{{ 'footer.company'|trans|raw }}</p>
				<p>
					<a href="{#{{ path('change_me') }}#}" class="btn btn-outline-light btn-sm">
						{{ 'footer.newsletter'|trans }}
					</a>
				</p>
			</div>

			<!-- Płatności -->
			<div class="col-md-4 text-center">
				<p class="">{{ 'footer.payments'|trans }}</p>
				<img src="{{ asset('images/formy-platnosci.png') }}" alt="Formy płatności" class="img-fluid" style="max-width: 100%; height: auto;">
			</div>
		</div>

		<div class="text-center">
			<small>&copy;
				{{ "now"|date("Y") }}
				{{ 'footer.copyright'|trans }}</small>
		</div>
	</div>
</footer>
