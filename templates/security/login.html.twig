{% extends 'base.html.twig' %}
{% trans_default_domain 'login' %}
{% block title %}
	{{ 'title'|trans}}
{% endblock %}

{% block body %}
	<form method="post" class="container mt-5" style="max-width: 400px;">
		<div class="card shadow-sm">
			<div class="card-body">
				<h1 class="h4 mb-4 text-center">{{ 'log_in'|trans }}</h1>

				{% if error %}
					<div class="alert alert-danger">
						{{ error.messageKey|trans(error.messageData, 'security') }}
					</div>
				{% endif %}

				<div class="form-group mb-3">
					<label for="username" class="form-label">{{ 'email'|trans }}</label>
					<input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" autocomplete="email" required autofocus>
				</div>

				<div class="form-group mb-4">
					<label for="password" class="form-label">{{ 'password'|trans }}</label>
					<input type="password" class="form-control" id="password" name="_password" autocomplete="current-password" required>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="d-grid">
					<button class="btn btn-primary btn-lg" type="submit">
						{{ 'button'|trans }}
					</button>
				</div>
			</div>
		</div>
	</form>
{% endblock %}
